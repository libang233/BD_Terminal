<UserControl x:Class="BD_Terminal.View.Mbutton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD_Terminal.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Grid>
            <Ellipse x:Name="OutEill" Width="50" Height="50" Fill="White" Stroke="#FFADBCC9" StrokeThickness="4">
            </Ellipse>
            <Label x:Name="InLabel" Content="Button" VerticalAlignment="Center"  HorizontalAlignment="Center" Foreground="#FFADBCC9"/>
            <Ellipse x:Name="EventEill" Width="50" Height="50" Fill="#00000000" MouseEnter="OutEill_MouseEnter" MouseLeave="OutEill_MouseLeave" 
                 MouseLeftButtonDown="OutEill_MouseLeftButtonDown" MouseLeftButtonUp="OutEill_MouseLeftButtonUp"/>
        </Grid>
    </Grid>
</UserControl>
